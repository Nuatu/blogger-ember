<div class='container'>
  <nav class='navbar navbar-default' role='navigation'>
    <ul class='nav navbar-nav'>
      <li>{{#link-to 'posts'}}Posts{{/link-to}}</li>
      <li>{{#link-to 'about'}}About{{/link-to}}</li>
      <li>{{#link-to 'contact'}}Contact{{/link-to}}</li>
    </ul>
  </nav>

  <h1>Contact</h1>
  <div class="row">
    <div class="col-md-6">
      <p>Want to get in touch?</p>
      <ul>
        <li>{{#link-to 'phone'}}☏{{/link-to}}</li>
        <li>{{#link-to 'email'}}✉{{/link-to}}</li>
      </ul>
      {{#if messageSent}}
        <p>Thank you. Your message has been sent.
          Your confimation number is {{confirmationNumber}}.</p>
      {{else}}
        <p>Or, <a href='#' {{action 'sendMessage'}}>click here</a> to send a secret message.</p>
      {{/if}}
    </div>
    <div class="col-md-6">
      {{outlet}}
    </div>
  </div>
</div>
